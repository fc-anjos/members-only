<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>

        <h2>
          <%= post.title %>
        </h2>

        <p>
          <%= post.body %>
        </p>

        <% if user_signed_in? %>
          <p>
            <%= post.user.username %>
          </p>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
